<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sam.rdev.catatanpenjualansayur">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name="sam.rdev.sayurku.activity.report.ReportActivity"></activity>
        <activity android:name="sam.rdev.sayurku.activity.penjualan.PenjualanBarang" />
        <activity android:name="sam.rdev.sayurku.activity.data_barang.DataBarangActivity" />
        <activity android:name="sam.rdev.sayurku.activity.register.RegisterActivity" />
        <activity android:name="sam.rdev.sayurku.activity.data_barang._add.AddBarangActivity" />
        <activity android:name="sam.rdev.sayurku.activity.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sam.rdev.sayurku.activity._main.Splasschreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sam.rdev.sayurku.activity._main.MainActivity" />
    </application>

</manifest>